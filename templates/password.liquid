{% layout none %}

<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Browser color mobile -->
    <meta name="theme-color" content="#ffffff" />

    <link rel="canonical" href="{{ canonical_url }}" />
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin />

    {%- if settings.favicon != blank -%}
    <link
      rel="icon"
      type="image/png"
      href="{{ settings.favicon | img_url: '32x32' }}"
    />
    {%- endif -%}

    <title>
      {{ page_title }}
    </title>

    {{
      content_for_header
    }}

    <style>

      body {
        padding: 0px;
margin: 0px;
      }
      main {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100vh;
        text-align: center;
        justify-content: space-around;
      }

      main h1 {
        font-size: 40px;
        text-align: center;
      }

      img {
        width: 100%;
        max-width: 400px;
        height: 100%;
        max-height: 250px;
        object-fit: cover;
        height: auto;
        margin: 0 auto;
      }

      footer {
        font-size: 14px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      footer .contacts {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      footer p {
        margin: 0;
        padding: 0;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <main id="MainContent" role="main">
      {{content_for_layout}}
      <h1>Coming Soon</h1>

      <img
        src="https://cdn.shopify.com/s/files/1/0635/3977/3656/files/Schermata_2022-04-01_alle_09.38.17.png?v=1648798736"
        alt=""
      />

      <footer>
        <div class="contacts">
          <p><a href="tel:+390541741733">+39 0541 741733</a></p>
          <p>
            <a href="mailto:info@chipseyewear.com">info@chipseyewear.com</a>
          </p>
          <p>Via Emilia, 102 - 47921 Rimini.</p>
        </div>

        <p>2022@Rombo SRL - P.IVA 03176280406</p>
      </footer>
    </main>
  </body>
</html>
